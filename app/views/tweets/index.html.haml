.table-responsive
  %table.table.table-striped.table-bordered.table-hover
    %tbody
      - @tweets.each_with_index do |tweet, index|
        %tr
          .media
            .media-left
              %a{:href => "#"}
                %img.media-object{:alt => "...", :src => "https://pbs.twimg.com/profile_images/489192650474414080/4RxZxsud_400x400.png", :height => "75px", :width => "75px"}/
            .media-body
              %h4.media-heading
                = tweet.text
                = tweet.user.email
                •
                = distance_of_time_in_words_to_now(tweet.created_at)
              %p
                = tweet.text
              -# reserved space for tweet content
              -# %p
              -#   =
              %p
                = link_to reply_tweet_path(tweet) do
                  %i.fa.fa-reply{"aria-hidden" => "true"}
                = tweet.replies.count

                = link_to retweet_tweet_path(tweet) do
                  %i.fa.fa-retweet{"aria-hidden" => "true"}
                = tweet.retweets.count

                = link_to heart_tweet_path(tweet) do
                  %i.fa.fa-heart{"aria-hidden" => "true"}
                = tweet.hearts.count

                = link_to "•••", tweet_path(tweet)
